{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "lib/types.ts",
    "lib/components/**/*.tsx",
    "lib/utils/**/*.ts",
    "src/css.d.ts"
  ],
  "exclude": [
    "**/*.stories.ts",
    "**/*.test.ts"
  ]
}